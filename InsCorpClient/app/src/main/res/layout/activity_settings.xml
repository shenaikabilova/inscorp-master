<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentEnd="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Настройки"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:id="@+id/tvSettings"
            android:textAlignment="viewStart" />

        <TextView
            android:text="Три имена"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:id="@+id/tvName"
            android:textAlignment="viewStart" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etName"
            android:hint="Три имена" />

        <TextView
            android:text="ЕГН"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvEGN" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etEGN"
            android:hint="ЕГН" />

        <TextView
            android:text="Държава"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCountry" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etUserCounty"
            android:hint="Дъжрава" />

        <TextView
            android:text="Град"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCity" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etCity"
            android:hint="Град" />

        <TextView
            android:text="Пощенски код"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvPostCode" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etPK"
            android:hint="Пощенски код"
            android:inputType="number" />

        <TextView
            android:text="Телефонен №"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvPhone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etPhone" />

        <TextView
            android:text="E-mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmail" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etEmail"
            android:hint="Email" />

    </LinearLayout>
</ScrollView>

